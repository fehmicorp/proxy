{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",

    "strict": true,

    "skipLibCheck": true,
    "esModuleInterop": false,
    

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": ["node"],

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
